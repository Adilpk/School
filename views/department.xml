<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="department_view" model="ir.ui.view">
        <field name="name">department.tree.view</field>
        <field name="model">department</field>
        <field name="arch" type="xml">
            <tree string="channel">
                <field name="name"/>
                <field name="hod_id"/>
            </tree>
        </field>
    </record>
    <record id="department_form" model="ir.ui.view">
        <field name="name">department.form</field>
        <field name="model">department</field>
        <field name="arch" type="xml">
            <form string="class_form">
                <sheet>
                    <group>
                        <group>
                        <field name="name"/>
                        </group>
                        <group>
                        <field name="hod_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="department_action" model="ir.actions.act_window">
        <field name="name">Department</field>
        <field name="res_model">department</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>