<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="class_view" model="ir.ui.view">
        <field name="name">student.class.tree</field>
        <field name="model">student.class</field>
        <field name="arch" type="xml">
            <tree string="channel">
                <field name="name"/>
                <field name="department_id"/>
            </tree>
        </field>
    </record>
    <record id="class_form" model="ir.ui.view">
        <field name="name">student.class.form</field>
        <field name="model">student.class</field>
         <field name="arch" type="xml">
            <form string="class_form">
                <sheet>
                    <group>
                        <group>
                        <field name="name"/>
                        </group>
                        <group>
                        <field name="department_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="student_class_action" model="ir.actions.act_window">
        <field name="name">Class</field>
        <field name="res_model">student.class</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>